<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tianxia.app.healthworld"
    android:versionCode="3"
    android:versionName="V1.0_Beta" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name=".AppApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="4f672e2352701550360000c9" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="dev" />
        <!-- 以下属性为应用ID,从万普后台获取 -->
        <meta-data
            android:name="WAPS_ID"
            android:value="923cfb1a970c051eccd0af856bd3752c" />
        <!-- 以下属性为分发渠道ID,编码表参见本文档末附表 -->
        <meta-data
            android:name="WAPS_PID"
            android:value="dev" />

        <activity
            android:name="com.tianxia.lib.baseworld.main.MainTabFrame"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.tianxia.lib.baseworld.BaseBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".home.HomeTabActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".home.HomeDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".infomation.InfomationTabActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".collect.CollectTabActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".favorite.FavoriteTabActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".favorite.FavoriteEditActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".setting.SettingTabActivity"
            android:screenOrientation="portrait" >
